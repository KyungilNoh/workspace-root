{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@ds": ["./node_modules/@your-org/design-system"],
      "@ds/*": ["./node_modules/@your-org/design-system/*"]
    }
  },
  "include": ["src", "vite.config.ts", "Frame.tsx"]
}
